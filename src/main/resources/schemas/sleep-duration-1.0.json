{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "This schema represents a single measurement of sleep duration. The ability to represent descriptive statistics (e.g., mean, median) will be added shortly.",
    "references": [
        {
            "description": "The SNOMED code represents Duration of sleep (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/248263006"
        }
    ],

    "definitions": {
        "effective_time_frame": {
            "$ref": "http://www.openmhealth.org/schema/omh/generic/time-interval-1.0.json"
        },
        "user_notes": {
            "type": "string"
        }
    },

    "properties": {
        "sleep_duration": {
            "allOf": [
                {
                    "$ref": "http://www.openmhealth.org/schema/omh/generic/duration-unit-value-1.0.json"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "min",
                                "h"
                            ]
                        }
                    }
                }
            ]
        },
        "effective_time_frame": {
            "$ref": "#/definitions/effective_time_frame"
        },
        "user_notes": {
            "$ref": "#/definitions/user_notes"
        }
    },
    "required": ["sleep_duration"]

}